{{#partial "content"}}

<h1>Teams list!</h1>
  {{#if teams}}
       {{#each teams }}
        <p>Current team:</p>
        <p>{{ teamName }}</p>
       {{/each}}
   {{else}}
    <p>No Teams!</p>
   {{/if}}
<p>Add a new team!</p>

<form action="/teams/new" method="POST">
  <label for="teamName">Post Description</label>
  <input id="teamName" name="teamName" type="text">

  <button type="submit" class="btn btn-default">Add Team</button>
</form>
{{/partial}}

{{> layout.hbs}}